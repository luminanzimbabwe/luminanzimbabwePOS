import React, { useState, useEffect } from 'react';
import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  TouchableOpacity,
  ActivityIndicator,
  RefreshControl,
} from 'react-native';
import { useNavigation } from '@react-navigation/native';
import { shopStorage } from '../services/storage';
import { shopAPI } from '../services/api';

const CashierDrawerScreen = () => {
  const navigation = useNavigation();
  const [loading, setLoading] = useState(true);
  const [refreshing, setRefreshing] = useState(false);
  const [cashierData, setCashierData] = useState(null);
  const [drawerStatus, setDrawerStatus] = useState(null);
  const [transactionCount, setTransactionCount] = useState(0);

  useEffect(() => {
    loadDrawerData();
  }, []);

  const loadDrawerData = async () => {
    try {
      const credentials = await shopStorage.getCredentials();
      if (!credentials) {
        navigation.replace('Login');
        return;
      }

      setCashierData(credentials);

      // Load drawer status
      const response = await shopAPI.getCashFloat();
      
      if (response.data && response.data.success) {
        const payload = response.data.drawer || response.data.shop_status || response.data;
        const today = new Date().toISOString().slice(0,10);
        const payloadDate = payload?.date || payload?.current_shop_day?.date || null;
        
        if (payloadDate && payloadDate !== today) {
          setDrawerStatus({
            cashier: credentials.name || 'Unknown',
            float_amount: 0,
            current_breakdown: { cash: 0, card: 0, transfer: 0, total: 0 },
            session_sales: { cash: 0, card: 0, transfer: 0, total: 0 },
            eod_expectations: { expected_cash: 0, variance: 0, efficiency: 100 },
            status: 'INACTIVE',
            last_activity: null
          });
          setTransactionCount(0);
          return;
        }

        if (payload && Array.isArray(payload.drawers)) {
          const cashierId = credentials.name || credentials.username || credentials.id || 
                          credentials.cashier_id || credentials.user_id || credentials.email;
          
          const matched = payload.drawers.find(d => {
            if (!d) return false;
            if (typeof d.cashier === 'string' && cashierId && d.cashier.toLowerCase() === String(cashierId).toLowerCase()) return true;
            if (d.cashier_id && credentials?.id && String(d.cashier_id) === String(credentials.id)) return true;
            return false;
          });

          if (matched) {
            setDrawerStatus(matched);
          } else if (payload.drawers.length === 1) {
            setDrawerStatus(payload.drawers[0]);
          }
        } else if (response.data.drawer) {
          setDrawerStatus(response.data.drawer);
        }

        // Set transaction count
        if (response.data.transaction_count !== undefined) {
          setTransactionCount(response.data.transaction_count);
        } else if (drawerStatus?.session_sales?.transaction_count !== undefined) {
          setTransactionCount(drawerStatus.session_sales.transaction_count);
        } else {
          const totalSales = drawerStatus?.session_sales?.total || 0;
          const avgTransaction = 10;
          setTransactionCount(Math.round(totalSales / avgTransaction));
        }
      }
    } catch (error) {
      console.error('Error loading drawer data:', error);
    } finally {
      setLoading(false);
      setRefreshing(false);
    }
  };

  const onRefresh = () => {
    setRefreshing(true);
    loadDrawerData();
  };

  // Currency formatting
  const formatCurrency = (amount, currency) => {
    if (currency === 'ZIG') return `${amount.toFixed(2)} ZIG`;
    if (currency === 'RAND') return `${amount.toFixed(2)} RAND`;
    return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(amount || 0);
  };

  if (loading) {
    return (
      <View style={styles.container}>
        <View style={styles.header}>
          <TouchableOpacity onPress={() => navigation.goBack()}>
            <Text style={styles.backButton}>‚Üê Back</Text>
          </TouchableOpacity>
          <Text style={styles.headerTitle}>üí∞ My Drawer</Text>
        </View>
        <View style={styles.loadingContainer}>
          <ActivityIndicator size="large" color="#10b981" />
          <Text style={styles.loadingText}>Loading drawer...</Text>
        </View>
      </View>
    );
  }

  // Get cash amounts for each currency
  const getCurrencyAmounts = () => {
    if (!drawerStatus) return { usd: 0, zig: 0, rand: 0 };
    
    const usd = drawerStatus.current_breakdown_by_currency?.usd?.cash || 
                drawerStatus.current_cash_usd || 
                drawerStatus.session_cash_sales_usd || 0;
    const zig = drawerStatus.current_breakdown_by_currency?.zig?.cash || 
                drawerStatus.current_cash_zig || 
                drawerStatus.session_cash_sales_zig || 0;
    const rand = drawerStatus.current_breakdown_by_currency?.rand?.cash || 
                 drawerStatus.current_cash_rand || 
                 drawerStatus.session_cash_sales_rand || 0;
    
    return { usd, zig, rand };
  };

  const currencyAmounts = getCurrencyAmounts();

  return (
    <ScrollView 
      style={styles.container}
      contentContainerStyle={styles.scrollContent}
      refreshControl={<RefreshControl refreshing={refreshing} onRefresh={onRefresh} />}
    >
      {/* Header */}
      <View style={styles.header}>
        <TouchableOpacity onPress={() => navigation.goBack()}>
          <Text style={styles.backButton}>‚Üê Back</Text>
        </TouchableOpacity>
        <Text style={styles.headerTitle}>üí∞ My Drawer</Text>
        <TouchableOpacity onPress={onRefresh} disabled={refreshing}>
          <Text style={styles.refreshButton}>{refreshing ? '‚ü≥' : '‚Üª'}</Text>
        </TouchableOpacity>
      </View>

      <View style={styles.content}>
        
        {/* Status Banner */}
        <View style={styles.statusBanner}>
          <Text style={styles.statusIcon}>‚úÖ</Text>
          <Text style={styles.statusText}>Drawer is active</Text>
        </View>

        {!drawerStatus ? (
          <View style={styles.noDrawerContainer}>
            <Text style={styles.noDrawerIcon}>üí∞</Text>
            <Text style={styles.noDrawerText}>No drawer found</Text>
            <Text style={styles.noDrawerSubtext}>Contact your supervisor</Text>
          </View>
        ) : (
          <>
            {/* ALL THREE CURRENCIES - Current Cash */}
            <View style={styles.section}>
              <Text style={styles.sectionTitle}>üí∞ CURRENT CASH IN DRAWER</Text>
              
              {/* USD */}
              <View style={[styles.currencyCard, styles.currencyCardUSD]}>
                <View style={styles.currencyRow}>
                  <Text style={styles.currencyIcon}>üíµ</Text>
                  <Text style={styles.currencyName}>USD</Text>
                </View>
                <Text style={styles.currencyAmount}>{formatCurrency(currencyAmounts.usd, 'USD')}</Text>
              </View>

              {/* ZIG */}
              <View style={[styles.currencyCard, styles.currencyCardZIG]}>
                <View style={styles.currencyRow}>
                  <Text style={styles.currencyIcon}>üí∞</Text>
                  <Text style={styles.currencyNameZIG}>ZIG</Text>
                </View>
                <Text style={styles.currencyAmountZIG}>{formatCurrency(currencyAmounts.zig, 'ZIG')}</Text>
              </View>

              {/* RAND */}
              <View style={[styles.currencyCard, styles.currencyCardRAND]}>
                <View style={styles.currencyRow}>
                  <Text style={styles.currencyIcon}>üí∏</Text>
                  <Text style={styles.currencyNameRAND}>RAND</Text>
                </View>
                <Text style={styles.currencyAmountRAND}>{formatCurrency(currencyAmounts.rand, 'RAND')}</Text>
              </View>
            </View>

            {/* Float Amount */}
            <View style={styles.floatSection}>
              <Text style={styles.floatLabel}>Your Float:</Text>
              <Text style={styles.floatValue}>
                {currencyAmounts.zig > 0 ? formatCurrency(drawerStatus.float_amount || 0, 'ZIG') :
                 currencyAmounts.rand > 0 ? formatCurrency(drawerStatus.float_amount || 0, 'RAND') :
                 formatCurrency(drawerStatus.float_amount || 0, 'USD')}
              </Text>
            </View>

            {/* Transaction Count */}
            <View style={styles.transactionCard}>
              <Text style={styles.transactionIcon}>üßæ</Text>
              <View style={styles.transactionInfo}>
                <Text style={styles.transactionLabel}>Transactions Today</Text>
                <Text style={styles.transactionCount}>{transactionCount}</Text>
              </View>
            </View>

            {/* Today's Sales by Currency */}
            <View style={styles.section}>
              <Text style={styles.sectionTitle}>üìä TODAY'S SALES</Text>
              
              <View style={styles.salesRow}>
                <View style={styles.salesCard}>
                  <Text style={styles.salesIcon}>üíµ</Text>
                  <Text style={styles.salesLabel}>Cash USD</Text>
                  <Text style={styles.salesValue}>{formatCurrency(currencyAmounts.usd, 'USD')}</Text>
                </View>
                
                <View style={styles.salesCard}>
                  <Text style={styles.salesIcon}>üí∞</Text>
                  <Text style={styles.salesLabel}>Cash ZIG</Text>
                  <Text style={styles.salesValueZIG}>{formatCurrency(currencyAmounts.zig, 'ZIG')}</Text>
                </View>
                
                <View style={styles.salesCard}>
                  <Text style={styles.salesIcon}>üí∏</Text>
                  <Text style={styles.salesLabel}>Cash RAND</Text>
                  <Text style={styles.salesValueRAND}>{formatCurrency(currencyAmounts.rand, 'RAND')}</Text>
                </View>
              </View>

              <View style={styles.salesRow}>
                <View style={styles.salesCard}>
                  <Text style={styles.salesIcon}>üí≥</Text>
                  <Text style={styles.salesLabel}>Card</Text>
                  <Text style={styles.salesValue}>{formatCurrency(drawerStatus.session_sales?.card || 0, 'USD')}</Text>
                </View>
                
                <View style={styles.salesCard}>
                  <Text style={styles.salesIcon}>üè¶</Text>
                  <Text style={styles.salesLabel}>Transfer</Text>
                  <Text style={styles.salesValue}>{formatCurrency(drawerStatus.session_sales?.transfer || 0, 'USD')}</Text>
                </View>
                
                <View style={[styles.salesCard, styles.totalCard]}>
                  <Text style={styles.salesIcon}>üìä</Text>
                  <Text style={styles.salesLabel}>Total</Text>
                  <Text style={styles.salesValueTotal}>
                    {currencyAmounts.zig > 0 ? formatCurrency(currencyAmounts.zig, 'ZIG') + ' + ' + formatCurrency(currencyAmounts.rand, 'RAND') + ' + ' + formatCurrency(currencyAmounts.usd, 'USD') :
                     currencyAmounts.rand > 0 ? formatCurrency(currencyAmounts.rand, 'RAND') + ' + ' + formatCurrency(currencyAmounts.usd, 'USD') :
                     formatCurrency(currencyAmounts.usd + (drawerStatus.session_sales?.card || 0) + (drawerStatus.session_sales?.transfer || 0), 'USD')}
                  </Text>
                </View>
              </View>
            </View>

            {/* Expected at End of Day */}
            {drawerStatus.eod_expectations?.expected_cash > 0 && (
              <View style={styles.expectedSection}>
                <Text style={styles.expectedTitle}>üéØ EXPECTED AT END OF DAY</Text>
                <Text style={styles.expectedValue}>
                  {currencyAmounts.zig > 0 ? formatCurrency(drawerStatus.eod_expectations.expected_cash, 'ZIG') :
                   currencyAmounts.rand > 0 ? formatCurrency(drawerStatus.eod_expectations.expected_cash, 'RAND') :
                   formatCurrency(drawerStatus.eod_expectations.expected_cash, 'USD')}
                </Text>
                {drawerStatus.eod_expectations.variance !== undefined && drawerStatus.eod_expectations.variance !== 0 && (
                  <Text style={[
                    styles.varianceText,
                    { color: drawerStatus.eod_expectations.variance >= 0 ? '#22c55e' : '#ef4444' }
                  ]}>
                    {drawerStatus.eod_expectations.variance >= 0 ? '‚Üë' : '‚Üì'} 
                    {formatCurrency(Math.abs(drawerStatus.eod_expectations.variance), 
                      currencyAmounts.zig > 0 ? 'ZIG' : currencyAmounts.rand > 0 ? 'RAND' : 'USD')} 
                    {drawerStatus.eod_expectations.variance >= 0 ? ' over' : ' under'}
                  </Text>
                )}
              </View>
            )}

            {/* Quick Actions */}
            <View style={styles.actionsSection}>
              <TouchableOpacity 
                style={styles.refundButton}
                onPress={() => navigation.navigate('SalesAndRefunds')}
              >
                <Text style={styles.actionIcon}>üí∞</Text>
                <Text style={styles.actionText}>Do Refunds</Text>
              </TouchableOpacity>
              
              <TouchableOpacity 
                style={styles.salesButton}
                onPress={() => navigation.navigate('Sales')}
              >
                <Text style={styles.actionIcon}>üõí</Text>
                <Text style={styles.actionText}>New Sale</Text>
              </TouchableOpacity>
            </View>

            {/* Last Updated */}
            <View style={styles.updateSection}>
              <Text style={styles.updateText}>
                üïê Updated: {drawerStatus.last_activity ? 
                  new Date(drawerStatus.last_activity).toLocaleTimeString() : 'Just now'}
              </Text>
            </View>

          </>
        )}
      </View>

      <View style={styles.bottomSpacing} />
    </ScrollView>
  );
};

